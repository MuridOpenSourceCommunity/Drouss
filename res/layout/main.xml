<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Included header.xml here -->

    <ViewStub
        android:id="@+id/vsHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/header"
        android:layout="@layout/header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="6dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/thpub"
                style="@style/HomeButton"
                android:drawableTop="@drawable/thpub"
                android:onClick="onButtonClicker" />

            <Button
                android:id="@+id/wolofal"
                style="@style/HomeButton"
                android:drawableTop="@drawable/wolofal"
                android:onClick="onButtonClicker" />
            
        </LinearLayout>

        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/qassidas"
                style="@style/HomeButton"
                android:drawableTop="@drawable/xacida"
                android:onClick="onButtonClicker" />

            <Button
                android:id="@+id/quran"
                style="@style/HomeButton"
                android:drawableTop="@drawable/quran"
                android:onClick="onButtonClicker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tariq"
                style="@style/HomeButton"
                android:drawableTop="@drawable/tariq"
                android:onClick="onButtonClicker" />

            <Button
                android:id="@+id/majalis"
                style="@style/HomeButton"
                android:drawableTop="@drawable/majali"
                android:onClick="onButtonClicker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/autre"
                style="@style/HomeButton"
                android:drawableTop="@drawable/autre"
                android:onClick="onButtonClicker" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/footer_layout" />

</LinearLayout>